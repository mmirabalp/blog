<% name || "Location"%>
<h1><%= name %> Article</h1>
<%= form_for(@article) do |f| %>
  <% @article.errors.full_messages.each do |message| %>
    <div class="be_red white top_space">
      *<%= message %>
    </div>
  <%end%>

  <div class = "field">
    <%=  f.text_field :title, {placeholder: "Title", class:"form_controls"} %>
  </div>

  <div class="field">
    <%= f.text_area :body, {placeholder: "Write your article", class:"form_controls text_area_form_controls"} %>
  </div>

  <div class="field">
    <%= f.submit "Submit", {class: "form_controls buttom_submit_form_controls"} %>
  </div>
  <%end%>
